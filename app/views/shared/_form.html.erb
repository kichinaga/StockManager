<% unless @par.nil? %>
    <div class="search_info">
      <h3>検索条件</h3>

      <p>市場 : <%= Market.find(@par[:market_id]).name %></p>
      <p>業種 : <%= Industry.find(@par[:industry_id]).name %></p>
      <p>企業名 : <%= @par[:company_name] %></p>
    </div>
<% end %>

<%= form_tag(:controller => :companies, :action => :search) do %>
    <div>
      <h3>会社検索</h3>

      <p>市場：<%= collection_select(:search, :market_id, Market.all, :id, :name, :include_blank => true) %> </p>

      <p>業種：<%= collection_select(:search, :industry_id, Industry.all, :id, :name, :include_blank => true) %></p>

      <p>企業名：<%= text_field :search, :company_name %>  </p>

      <%= submit_tag('検索') %>

    </div>
<% end %>