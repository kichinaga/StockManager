<%= form_for @stock do |f| %>

    <%= f.label '購入 / 売却' %>
    <%= f.select :action, [%w(購入 buy), %w(売却 sell)] %>

    <%= f.label '株数' %>
    <%= f.number_field :num, class: 'form-control' %>

    <%= f.label '購入価格' %>
    <%= f.number_field :price, value: @now_price, class: 'form-control' %>

    <%= f.hidden_field :stock_list_id, value: @stock_list.id %>

    <%= f.submit '登録', class: 'btn btn-primary' %>

<% end %>