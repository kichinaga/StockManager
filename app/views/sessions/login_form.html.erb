<h1>ログイン</h1>

<%= form_tag sessions_login_path do %>

    <div class="field">
      <%= label_tag :name, 'Eメール' %>
      <%= text_field_tag :name, params[:name] %>
    </div>

    <div class="field">
      <%= label_tag :pass, 'パスワード' %>
      <%= password_field_tag :pass , params[:pass]%>
    </div>

    <div class="actions">
      <%= submit_tag 'ログイン' %>
    </div>
<% end %>